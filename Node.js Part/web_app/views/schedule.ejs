    <style type="text/css">
        .container-fluid{
            position: relative;
        }

        .col-md-8{
          position: static !important;
        }
        body{
           
            font-family: Roboto;
            font-weight: 300;
        }

        #list_body{
            padding-right:20px;
            height:700px;
            position: relative;
            
        }

        .wrap{
           height:700px;
           margin-right:20px;
           background-color: #f7f7f9;
           border-radius: 10px;
           padding-left:10px;
           padding-right:10px;
        }

        .list_table{
            background-color: #f7f7f9;
            color:#202020;
            border-radius: 10px;
            padding:10px;
        }

        .add_b, .info_b{
            height:40px !important;
            line-height:40px !important;
            font-weight: 300 !important;
            margin-right: 5px;
        }

        .hidden_info{
              position: absolute;
              left: 0.9%;
              width: 32%;
              *padding: 10px;
              background-color: #fff;
              border-radius: 10px;
              height: 500px;
              top: 200px;
        }

        .info_header{
              width:100%;
              height:60px;
              background-color: #1fcaa7;
              border-radius: 10px 10px 0px 0px;
              font-family: Roboto;
              font-weight:300;
              padding:10px;

        }

        .info_body{
          background-color: #fff;
          width:100%;
          height:430px;
        }

        .info_header h3{
              font-family: Roboto;
              font-weight:300;

        }

        .go_to{
          font-family: Roboto;
          font-weight:300;
          width:300px;
          position: absolute;
          right:40px;
          top:-70px;
        }

    </style>
</head>
<body class="container-fluid" style="">


<!-- Header -->
<div class="row">
    <header id="header" class="col-md-6">
        <h1 style="font-weight:100" >Search for section</h1>
        <p>Just type name of the course or its abbreviation<br />
            </p>
    </header>
</div>
<div class="row">
<!-- Signup Form -->
    <form id="signup-form" method="post" action="/schedule" class="col-md-4">
        <input type="text" name="sectionTitle"  placeholder="Section Title" />
        <input type="submit" value="Search" />
    </form>

    <!-- Classes List -->
    <div id="list_body" class="col-md-8">
        <a href="schedule2" target="-blank" class="button go_to">Go to Selected Courses</a>
        <div class="wrap">
            <table class="table table-hover list_table" >
              <thead style="font-weight:400; ">
                <tr style="height:60px;">
                  <th style="width:12%">Code</th>
                  <th >Course Title</th>
                  <th style="width:10%">Credits</th>
                  <th style="width:20%">Action</th>
                </tr>
              </thead>
              <tbody>
                <%- sectionList %>
              </tbody>
            </table>
        </div>
    </div>
</div>
<!-- Footer -->
<footer id="footer">

</footer>

<!-- Scripts -->
<!--[if lte IE 8]>
<script src="../schedule1%20template/assets/js/ie/respond.min.js"></script><![endif]-->

<script src="../schedule1%20template/assets/js/main.js"></script>
<script src="../strata%20template/assets/js/jquery.min.js"></script>
<script type="text/javascript">
  $(document).ready(function(){


      $('.info_b').click(function(){
        if($(this).hasClass("actInfo")){
          $('.hidden_info').addClass('hidden');
          $(this).removeClass("actInfo")
        }else{
          $('.hidden_info').addClass('hidden');
          $('.info_b').removeClass('actInfo');
          $(this).next('.hidden_info').removeClass("hidden");
          $(this).addClass("actInfo")
        }
      });
      $('.add_b').click(function(){
          var id = $(this).attr("id");
          var name = $(this).attr("name");
          var scheduleName = $(this).attr("scheduleName");
          $.post("/schedule2", {departureURL:"schedule",sectionID: id, sectionName: name, scheduleName: scheduleName}, function(result){
              console.log(result);
          });
          alert(name + ' is added to the wish list of the "' + scheduleName + '" schedule');

      });


  });    

</script>

</body>
</html>